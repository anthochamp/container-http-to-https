{
	"private": true,
	"scripts": {
		"test": "node --import=tsx --test-concurrency 1 --test tests/**/*.test.*",
		"tsc:check": "tsc -noEmit -p ./tsconfig.json",
		"biome:check": "biome check --error-on-warnings",
		"biome:fix": "biome check --write",
		"biome:fix-unsafe": "biome check --write --unsafe",
		"markdownlint:check": "markdownlint -p .gitignore '**/*.md' '**/*.mdx'",
		"markdownlint:fix": "markdownlint -p .gitignore --fix '**/*.md' '**/*.mdx'",
		"postinstall": "is-ci || lefthook install"
	},
	"devDependencies": {
		"@types/node": "22.5.5",
		"@biomejs/biome": "1.9.2",
		"tsx": "4.19.1",
		"find-up": "7.0.0",
		"typescript": "5.6.2",
		"lefthook": "1.7.15",
		"markdownlint-cli": "0.41.0",
		"is-ci": "3.0.1",
		"@ac-essentials/tsconfig": "0.1.1",
		"@ac-essentials/docker-cli": "0.1.2",
		"@ac-essentials/find-git-dir": "0.1.2",
		"@ac-essentials/misc-util": "0.1.2",
		"@ac-essentials/biome-config": "0.1.0"
	}
}
